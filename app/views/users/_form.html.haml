= puts @user.email
= puts @user.nickname
.container
  = simple_form_for @user, url: user_registration_path, :html => { :class => 'form-horizontal' } do |f|
    = f.error_notification
    .form-inputs
      = f.input :nickname, required: true, autofocus: true
      = f.input :firstname, required: true, autofocus: true
      = f.input :surname, required: true, autofocus: true
      = f.input :email, required: true, autofocus: true
      = f.input :password, required: true, autofocus: true
      = f.input :password_confirmation, required: true
      -# = f.input :avatar, as: :picture_preview, input_html: {preview_version: :thumb}
      -# .form-group
        -# = f.label :pictures, class: 'form-control-label'
        -# = f.file_field :pictures, multiple: true, class: 'btn btn-default'
        -# = f.hidden_field :pictures_cache
    %br
    .form-actions
      = f.button :submit, :class => 'btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), root_path, :class => 'btn btn-default'
