.container
  = simple_form_for resource, as: resource_name, url: user_registration_path, :html => { :class => 'form-horizontal' } do |f|
    = f.error_notification
    .form-inputs
      = f.input :nickname, required: true, autofocus: true, presence: true
      = f.input :firstname, required: true, autofocus: true, presence: true
      = f.input :surname, required: true, autofocus: true, presence: true
      = f.input :email, required: true, autofocus: true, presence: true
      = f.input :password, required: true, autofocus: true, presence: true
      = f.input :password_confirmation, required: true
      = f.simple_fields_for :media, @user.media.build do |m|
        = m.input :medium, as: :file
        = m.hidden_field :medium_type, value: 'image'
    %br
    .form-actions
      = f.button :submit, :class => 'btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), root_path, :class => 'btn btn-default'
= console
